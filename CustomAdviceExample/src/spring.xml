<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
         http://www.springframework.org/schema/beans 
           classpath:/org/springframework/beans/factory/xml/spring-beans-3.0.xsd 
         http://www.springframework.org/schema/context 
         classpath:/org/springframework/context/config/spring-context-3.0.xsd
        http://www.springframework.org/schema/aop 
        classpath:/org/springframework/aop/config/spring-aop-3.0.xsd
         ">
	<aop:aspectj-autoproxy />
	<bean name="traingle" class="com.yaswanth.aop.model.Traingle">
		<property name="name" value="Traingle name"></property>
	</bean>
	<bean name="circle" class="com.yaswanth.aop.model.Circle">
	<!-- 	<property name="name" value="Circle name"></property> -->
	</bean>
	<bean name="shapeservice"
		class="com.yaswanth.aop.service.ShapeService" autowire="byName"></bean>

	<bean name="loggingaspect"
		class="com.yaswanth.aop.aspect.LoggingAspect"></bean>
</beans>
